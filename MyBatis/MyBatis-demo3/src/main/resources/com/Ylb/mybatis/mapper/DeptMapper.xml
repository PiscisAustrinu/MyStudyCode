<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Ylb.mybatis.mapper.DeptMapper">
<!--    Dept getEmpAndDeptByStepTwo(@Param("did")int did);-->
    <select id="getEmpAndDeptByStepTwo" resultType="Dept">
        select * from t_dept where did = #{did}
    </select>

    <resultMap id="DeptAndEmpMap" type="Dept">
        <id property="did" column="did"/>
        <result property="deptName" column="dept_name"/>
        <!--
            collection:处理一对多的映射关系
            ofType：表示该属性所对应的集合中存储数据的类型
        -->
        <collection property="emps" ofType="Emp">
            <id property="eid" column="eid"/>
            <result property="EmpName" column="emp_name"/>
            <result property="age" column="age"/>
            <result property="sex" column="sex"/>
            <result property="email" column="email"/>
        </collection>
    </resultMap>
<!--    Dept getDeptAndEmp(@Param("did") int did);-->
    <select id="getDeptAndEmp" resultMap="DeptAndEmpMap">
        select * from t_dept left join t_emp on t_dept.did = t_emp.did where t_dept.did = #{did}
    </select>


    <resultMap id="DeptAndEmpByStepMap" type="Dept">
        <id property="did" column="did"/>
        <result property="deptName" column="dept_name"/>
        <collection property="emps" select="com.Ylb.mybatis.mapper.EmpMapper.getDeptAndEmpByStepTwo" column="did"/>
    </resultMap>
<!--    Dept getDeptAndEmpByStep(@Param("did") int did);-->
    <select id="getDeptAndEmpByStepOne" resultMap="DeptAndEmpByStepMap">
        select * from t_dept where did = #{did}
    </select>
</mapper>